{
	"name": "@zextras/carbonio-ui-text-composer",
	"version": "0.0.0-semantically-released",
	"description": "A React-based rich text editor component library for Carbonio applications, built on top of TinyMCE",
	"keywords": [
		"carbonio",
		"react",
		"text-editor",
		"wysiwyg",
		"tinymce",
		"rich-text",
		"composer",
		"ui-component"
	],
	"homepage": "https://github.com/zextras/carbonio-ui-text-composer#readme",
	"bugs": {
		"url": "https://github.com/zextras/carbonio-ui-text-composer/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zextras/carbonio-ui-text-composer.git"
	},
	"license": "AGPL-3.0-only",
	"author": "Zextras Dev Team <https://www.zextras.com/carbonio/>",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"README.md",
		"COPYING",
		"LICENSE",
		"THIRDPARTIES",
		"CHANGELOG.md"
	],
	"scripts": {
		"build": "vite build",
		"build:watch": "vite build --watch",
		"clean": "rimraf dist",
		"lint": "eslint --ext .js,.jsx,.ts,.tsx --resolve-plugins-relative-to node_modules/@zextras/carbonio-ui-configs src",
		"lint:fix": "npm run lint -- --fix",
		"prepare": "is-ci || husky",
		"prepack": "npm run clean && npm run build",
		"prettify": "prettier --write .",
		"prettify:check": "prettier --check .",
		"prettify:check:stagedFiles": "prettier --check $(git --no-pager diff --name-only --cached | tr '\\n' ' ')",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest watch",
		"type-check": "tsc --noEmit",
		"validate": "npm run type-check && npm run lint && npm run test"
	},
	"dependencies": {
		"@tinymce/tinymce-react": "^4.3.2",
		"date-fns": "^4.1.0",
		"tinymce": "^6.8.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.5.2",
		"@types/node": "^22.10.2",
		"@types/react": "^18.3.7",
		"@types/react-dom": "^18.3.5",
		"@vitejs/plugin-react": "^5.0.4",
		"@vitest/coverage-v8": "^3.1.1",
		"@zextras/carbonio-design-system": "^11.0.0-devel.1",
		"@zextras/carbonio-ui-configs": "^2.1.0",
		"babel-plugin-transform-react-remove-prop-types": "^0.4.24",
		"eslint-plugin-notice": "^1.0.0",
		"husky": "^9.1.7",
		"i18next": "^22.4.13",
		"is-ci": "^4.1.0",
		"jsdom": "^27.0.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-i18next": "^12.2.0",
		"sonar-scanner": "^3.1.0",
		"typescript": "^5.9.3",
		"vite": "^7.1.9",
		"vite-plugin-dts": "^4.3.0",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"@zextras/carbonio-design-system": "^11.0.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-i18next": "^12.0.0"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"sideEffects": [
		"*.css"
	]
}
